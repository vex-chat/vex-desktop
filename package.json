        "jest": "^26.1.0",
        "lint-staged": "^10.2.11",
        "mini-css-extract-plugin": "^1.3.1",
        "prettier": "^2.2.1",
        "react-refresh": "^0.9.0",
        "react-test-renderer": "^17.0.1",
        "rimraf": "^3.0.0",
        "sass": "^1.32.0",
        "sass-loader": "^10.1.0",
        "style-loader": "^2.0.0",
