    },
    "devEngines": {
        "node": ">=10.x",
        "yarn": ">=1.21.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn syncVersions; git add ./src/package.json package.json; lint-staged"
        }
    },
    "version": "0.11.3"
